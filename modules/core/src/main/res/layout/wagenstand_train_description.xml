<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp"
    android:minHeight="60dp"
    android:paddingBottom="5dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Time"
        android:textSize="@dimen/wagenstand_14dp_textSize"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/time_label"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:id="@+id/connection_container"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!-- train cell items -->

        </LinearLayout>

        <TextView
            android:id="@+id/additional_text_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Additional Text"
            android:textColor="@color/red"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:src="@drawable/listrightarrow"
        android:importantForAccessibility="no"/>

</RelativeLayout>