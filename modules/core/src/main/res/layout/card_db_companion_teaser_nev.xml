<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/fragment_rail_replacement"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nev_db_companion_headline"
        android:textSize="@dimen/textsize_28"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_space"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:importantForAccessibility="no"
            android:layout_weight="0.8"
            android:paddingVertical="12dp"
            android:src="@drawable/teaser_db_companion_card"

            android:contentDescription="@string/teaser_ar_headline" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space"
            android:layout_weight="2"
            android:textSize="@dimen/textsize_28"
            android:text="@string/nev_db_companion_copy"
            />

    </LinearLayout>

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_space"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_28"
        android:text="@string/nev_db_companion_link_description"
        />

    <TextView
        android:id="@+id/weblink_DbCompanion"
        android:layout_marginTop="@dimen/default_space"
        android:importantForAccessibility="yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_button_grey"
        android:gravity="center"
        android:minHeight="64dp"
        android:text="@string/nev_db_companion_button_text"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>
