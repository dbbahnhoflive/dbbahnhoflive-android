<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:padding="@dimen/default_space"
            android:drawableTop="@drawable/app_warndreieck_dunkelgrau"
            android:text="Ladefehler"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="@dimen/default_space"
            android:id="@+id/errorMessageDetail"
            android:text="@string/error_detail_message_station_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:id="@+id/buttonRetry"
            android:layout_width="match_parent"
            android:layout_height="@dimen/round_button_size_large"
            android:layout_margin="@dimen/default_space"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="@dimen/round_button_half_size_large">

            <TextView
                android:id="@+id/button_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:minHeight="64dp"
                android:textColor="@color/white"
                android:text="@string/btn_retry" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

            