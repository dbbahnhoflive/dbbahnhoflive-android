<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red">

    <ImageView
        android:importantForAccessibility="no"
        android:id="@+id/header_background"
        android:transitionName="@string/transition_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_screen_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:contentDescription="@string/sr_db"
        android:id="@+id/home_logo"
        android:transitionName="@string/transition_home_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/db_logobox_rechts"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:importantForAccessibility="no"
        android:id="@+id/pin_icon"
        android:transitionName="@string/transition_pin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/pin_mit_bahnhof"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@+id/title_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/title_image" />

    <ImageView
        android:contentDescription="@string/sr_app_full"
        android:id="@+id/title_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/splash_screen_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_background"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>