<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

<LinearLayout

    android:id="@+id/layout"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"

    >

    <ImageButton
        android:id="@+id/linkButton"
        android:layout_width="@dimen/textsize_28"
        android:layout_height="@dimen/textsize_28"
        android:importantForAccessibility="no"

        android:layout_gravity="center"
        android:src="@drawable/app_link_external_red"
        >

    </ImageButton>

    <TextView
        android:id="@+id/linkText"

        android:layout_marginStart="@dimen/default_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/rail_replacement_db_companion_imprint"
        android:textSize="@dimen/textsize_28"
        android:textStyle="bold" />

</LinearLayout>

</layout>
