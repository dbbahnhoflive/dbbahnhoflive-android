<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/linkButton"
        android:layout_width="@dimen/textsize_28"
        android:layout_height="@dimen/textsize_28"
        android:importantForAccessibility="no"
        android:layout_gravity="center"
        android:src="@drawable/app_link_external_red"
        />

    <TextView
        android:id="@+id/linkText"

        android:layout_marginStart="@dimen/default_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="yes"
        android:layout_gravity="center_vertical"

        android:text="@string/rail_replacement_db_companion_imprint"
        android:textSize="@dimen/textsize_28"
        android:textStyle="bold" />

</LinearLayout>

