<resources>
    <style name="App" />

    <style name="App.TextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textsize_default</item>
        <item name="android:fontFamily">@null</item>
    </style>

    <style name="App.TextAppearance.AppTitle">
        <item name="android:textSize">@dimen/textsize_h0</item>
        <!--<item name="android:textColor">@color/white</item>-->
    </style>

    <style name="App.TextAppearance.H3">
        <item name="android:textSize">@dimen/textsize_h3</item>
    </style>

    <style name="Widget.App.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="App.TextAppearance.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextAppearance.EcoTeaser" />

    <style name="App.TextAppearance.OccupancyDayOfWeek">
        <item name="android:textSize">@dimen/textsize_occupancy_day_of_week</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">5.5dp</item>
        <item name="android:paddingBottom">5.5dp</item>

    </style>

    <style name="App.Widget" parent="android:Widget" />

    <style name="App.Widget.Card">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="App.Widget.CardContainer">
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
    </style>

    <style name="App.Widget.CardContainer.Row">
        <item name="android:showDividers">none</item>
        <item name="android:divider">@drawable/shape_divider_tiny</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="App.TextAppearance.StationTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_h1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
    </style>

    <style name="App.TextAppearance.OpeningHours">
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="App.TextAppearance.OpeningHours.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextAppearance.OpeningHours.Special">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="App.LayoutElement">
        <item name="android:paddingTop">@dimen/default_space</item>
        <item name="android:paddingBottom">@dimen/default_space</item>
        <item name="android:paddingStart">@dimen/default_space</item>
        <item name="android:paddingEnd">@dimen/default_space</item>
    </style>

    <style name="App.LayoutElement.OpeningHours">
        <item name="android:textAppearance">@style/App.TextAppearance.OpeningHours</item>
    </style>

    <style name="App.LayoutElement.OpeningHours.DayLabel">
        <item name="android:textAppearance">@style/App.TextAppearance.OpeningHours.Label</item>
        <item name="layout_constraintWidth_min">@dimen/indent</item>
    </style>

<!--    Theme.AppCompat.Light-->

    <style name="App.Dialog.Theme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/App.Dialog.Theme.TitleStyle</item>
        <item name="android:textViewStyle">@style/App.Dialog.Theme.TextViewStyle</item>
        <item name="android:buttonStyle">@style/App.Dialog.Theme.ButtonStyle</item>
        <item name="android:windowBackground">@drawable/shape_rounded_rectangle_default</item>
    </style>

    <style name="App.Dialog.Theme.TextViewStyle" parent="android:Widget.TextView">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="App.Dialog.Theme.ButtonStyle" parent="android:Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="App.Dialog.Theme.TitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/textsize_h1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>

    </style>

</resources>